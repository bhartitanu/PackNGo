<% layout("/layouts/boilerplate")%>
<div class="row">
  <div class="col-8 mt-2 offset-2">
    <div class="card col-6 mt-3">
      <h2 style="color: #1e2a5e">Listing details:</h2>
      <img
        src="<%= listing.img %>"
        class="card-img-top show-img"
        alt="listing-image"
      />
      <div class="card-body">
        <p class="card-text">
          <b><%=listing.title%></b><br />
          <%=listing.desc%> <br />
          &#8377;<%=listing.price.toLocaleString("en-IN")%> <br />
          <%=listing.location%>,<%=listing.country%>
        </p>
      </div>
    </div>
    <div class="btns offset-3 mb-1">
      <div class="btn btn-secondary edit-btn">
        <a href="/listings/<%=listing._id%>/edit">Edit this listing</a>
      </div>
      <div class="btn btn-dark Del-btn">
        <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
          Delete
        </form>
      </div>
    </div>
  </div>
</div>
