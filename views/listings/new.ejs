<% layout("/layouts/boilerplate")%>
<div class="row">
  <div class="col-8 offset-2">
    <body>
      <form
        class="new-body-container needs-validation"
        action="/listings"
        method="post"
        novalidate
      >
        <br /><br />
        <h3 style="color: #1e2a5e">Create a new Listing here:</h3>

        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            class="form-control"
            placeholder="Enter a unique title "
            required
          />
          <div class="invalid-feedback">Enter a good title</div>
        </div>

        <div class="mb-3">
          <label for="desc" class="form-label">Description</label
          ><textarea
            name="listing[desc]"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Give a brief Discription</div>
        </div>

        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            class="form-control"
            name="listing[price]"
            placeholder="1300"
            required
          />
          <div class="invalid-feedback">Please enter valid Price</div>
        </div>

        <div class="mb-3">
          <label for="img" class="form-label"></label>
          <input
            type="text"
            name="listing[img]"
            class="form-control"
            placeholder="Paste Link/Url of Image"
          />
        </div>

        <div class="row mb-3">
          <div class="col-md-8">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              name="listing[location]"
              class="form-control"
              placeholder="Dehradun,U.K."
              required
            />
            <div class="invalid-feedback">Enter valid location</div>
          </div>
          <div class="col-md-4">
            <label for="country" class="form-label">Country:</label>
            <input
              type="text"
              class="form-control"
              name="listing[country]"
              placeholder="India"
              required
            />
            <div class="invalid-feedback">Enter valid Country</div>
          </div>
        </div>
        <br /><br />
        <button class="btn btn-dark">Create</button>
        <br /><br />
      </form>
    </body>
  </div>
</div>
